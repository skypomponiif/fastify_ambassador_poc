{
  "name": "Fastify-POC",
  "version": "1.0.0",
  "description": "The project of the Fastify POC",
  "engines": {
    "node": "14.17.0",
    "npm": "6.14.13"
  },
  "scripts": {
    "watch": "concurrently \"npm:watch:first-api\" \"npm:watch:first-api:ambassador\" \"npm:watch:second-api\" \"npm:watch:second-api:ambassador\"",
    "watch:first-api": "cd packages/first-api/app && npm run watch",
    "watch:first-api:ambassador": "cd packages/first-api/ambassador && npm run watch",
    "watch:second-api": "cd packages/second-api/app && npm run watch",
    "watch:second-api:ambassador": "cd packages/second-api/ambassador && npm run watch",
    "compile": "npx lerna run compile",
    "setup": "npx lerna clean --yes && npx lerna bootstrap",
    "lint": "eslint . --ext .ts",
    "test": "npx cross-env LOG_LEVEL=silent && npx mocha -p --timeout 5000 -r ts-node/register 'test/**/*.test.ts'",
    "coverage": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sky-uk/ita-videoplatform-eu-portability.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/sky-uk/ita-videoplatform-eu-portability/issues"
  },
  "homepage": "https://github.com/sky-uk/ita-videoplatform-eu-portability#readme",
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@types/node": "16.9.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "mocha": "9.1.1",
    "nyc": "15.1.0",
    "prettier": "2.4.0",
    "ts-loader": "9.2.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.2"
  },
  "nyc": {
    "include": [
      "packages/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "axios": "^0.24.0",
    "concurrently": "^6.4.0",
    "dotenv": "^10.0.0",
    "fastify": "3.24.0",
    "fastify-http-proxy": "^6.2.1",
    "lerna": "4.0.0",
    "nodemon": "2.0.15"
  }
}
